<div class="container">
    <%= render "layouts/sidebar" %>
    <div class="content-box col-md-8">
        <div class="page-title">
            <h2>새글 작성</h2>
            <hr id="title-underbar">
        </div>
        <br>
        <div class="page-content">
            <form action="/Design_documents/new" method="post" enctype="multipart/form-data">
                <input type="hidden" name="user_id" value="<%=current_user.id %>"></input>
                <div class="form-group">
                    <span>* </span><label>제목</label>
                    <input type="text" class="form-control" placeholder="제목을 입력해주세요." name="title"></input>
                </div>
                <div class="form-group">
                    <span>* </span><label>내용</label>
                    <textarea class="tinymce form-control" name="content" rows="20" cols="80"></textarea>
                </div>
                <div class="form-group">
                    <span>* </span><label>파일 첨부</label>
                    <input type="file" name="files[]" id="file-input-button" multiple></input>
                </div>
                <div class="actions">
                    <button type="submit" class="btn btn-default">작성 완료</button>
                </div>
            </form>
        </div>
        <br><br>
    </div>
</div>

<style>
    div.actions{
        text-align:right;
    }
    #file-input-button{
        margin-left:10px;
    }
    .page-title{
        font-family:Jeju;
    }
    .content-box{
        margin-top:60px;
        margin-left:10px;
    }
    hr#title-underbar{
       border-bottom:1px solid #eee;
    }
    .form-control::-moz-placeholder {
      color: #555;
    }
    .form-control:-ms-input-placeholder {
      color: #555;
    }
    .form-control::-webkit-input-placeholder {
      color: #555;
    }
    
    form > div > span {
        color:#db3445;
     }
     .mce-branding.mce-widget.mce-label.mce-flow-layout-item.mce-last{
         color:transparent;
     }
     div.mce-path.mce-flow-layout-item.mce-first{
         display:none;
     }
     @media (max-width: 480px) {
        .content-box {
            margin-top:0;
            padding-top:10px;
            margin-left: 0;
        }
      }
      @media (max-width: 320px) {
        nav{
            max-width:320px;
        }
      }
</style>
