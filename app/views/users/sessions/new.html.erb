<div class="container">
  <div class="row col-md-offset-4 col-md-4">
    <div class="login-form">
    <a href="/">
      <img src="/logo.png" alt="logo" id="logo"></img>
    </a>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label "이메일" %><br />
        <%= f.email_field :email, autofocus: true, :class =>"form-control" %>
      </div>
    
      <div class="form-group">
        <%= f.label "비밀번호" %><br />
        <%= f.password_field :password, autocomplete: "off", :class =>"form-control"%>
      </div>
    
      <div class="actions">
        <%= f.submit "로그인", :class =>"btn btn-default" %>
      </div>
    <% end %>
      <a href="/users/sign_up" class="btn btn-default" id="sign_up-button">회원가입</a>
    <div class="links-box">
      <%= render "users/shared/links" %>
    </div>
    </div>
  </div>
</div>

<style>
    img#logo{
            margin-top:40px;
            margin-bottom:40px;
            width:100%;
     }
  @media (max-width: 1000px) {
    img#logo{
      margin-top:80px;
      width:100%;
      margin-bottom:40px;
    }
  }
  .container{
      margin-top:10%;
      min-height:100%;
      position:relative;
    }
  .login-form input{
    width:100%;
  }
  .login-form label{
    color:#606266;
  }
  .login-form{
    font-family:sans-serif;
  }
  .links-box a{
    font-family: sans-serif;
  }
  #logo{
    width:100%;
    margin-bottom:30px;
  }
  #sign_up-button{
    width:100%;
    margin-top:15px;
    margin-bottom:15px;
  }
</style>
