<div class="container">
    <%= render "layouts/sidebar" %>
    <div class="content-box col-md-8">
        <div class="page-title">
            <h2>질문 수정</h2>
            <hr id="title-underbar">
        </div>
        <br>
        <div class="page-content">
            <form action="/Q&A/<%=@qna.id %>/edit" method="post" enctype="multipart/form-data">
                <input type="hidden" name="user_id" value="<%=current_user.id %>"></input>
                <div class="form-group">
                    <span>* </span><label>질문 분야</label>
                    <select class="form-control" name="category">
                    <% if @qna.category == "Autosar" %>
                        <option value="Autosar" selected="selected">Autosar</option>
                        <option value="category_2">기타</option>
                    <% else %>
                        <option value="Autosar">Autosar</option>
                        <option value="category_2" selected="selected">기타</option>
                    <% end %>
                    </select>
                </div>
                <div class="form-group">
                    <span>* </span><label>제목</label>
                    <input type="text" class="form-control" placeholder="제목을 입력해주세요." name="title" value="<%=@qna.title %>"></input>
                </div>
                <div class="form-group">
                    <span>* </span><label>내용</label>
                    <textarea class="form-control" name="content" rows="10"><%= @qna.content %></textarea>
                </div>
                <div class="form-group">
                    <span>* </span><label>수정할 이미지 첨부</label><em>(이미지 수정을 원할 경우 새로 첨부)</em>
                    <input type="file" name="image" id="image-input-button"></input>
                </div>
                <div class="actions">
                    <button type="submit" class="btn btn-default">수정 완료</button>
                </div>
            </form>
        </div>
        <br>
    </div>
</div>

<style>
    .qna-image{
        width:300px;
    }
    div.actions{
        text-align:right;
    }
    #image-input-button{
        margin-left:10px;
    }
    .page-title{
        font-family:Jeju;
    }
    .content-box{
        margin-top:60px;
        margin-left:10px;
    }
    hr#title-underbar{
       border-bottom:1px solid #eee;
    }
    .form-control::-moz-placeholder {
      color: #555;
    }
    .form-control:-ms-input-placeholder {
      color: #555;
    }
    .form-control::-webkit-input-placeholder {
      color: #555;
    }
    
    form > div > span {
        color:#db3445;
     }
     @media (max-width: 480px) {
        .content-box {
            margin-top:0;
            padding-top:10px;
            margin-left: 0;
        }
        em{
            font-size:12px;
        }
    }
</style>
